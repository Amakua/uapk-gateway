{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://uapk.dev/schemas/capability.v0.1.json",
  "title": "UAPK Capability Token v0.1",
  "description": "Schema for UAPK Capability Token - time-limited permission grants for agents",
  "type": "object",
  "required": ["token_id", "manifest_id", "agent_id", "capabilities", "issued_at", "expires_at"],
  "properties": {
    "token_id": {
      "type": "string",
      "pattern": "^cap-[a-zA-Z0-9]{16,32}$",
      "description": "Unique capability token identifier"
    },
    "manifest_id": {
      "type": "string",
      "format": "uuid",
      "description": "UAPK Manifest ID this token is associated with"
    },
    "agent_id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]{2,62}$",
      "description": "Agent this token is issued to"
    },
    "org_id": {
      "type": "string",
      "format": "uuid",
      "description": "Organization context"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9-]*:[a-z][a-z0-9-*]*$"
      },
      "minItems": 1,
      "description": "Granted action capabilities"
    },
    "issued_at": {
      "type": "string",
      "format": "date-time",
      "description": "Token issue timestamp (ISO 8601)"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "description": "Token expiration timestamp (ISO 8601)"
    },
    "issued_by": {
      "type": "string",
      "description": "Issuer identifier (user ID or 'system')"
    },
    "scope": {
      "type": "object",
      "description": "Additional scope restrictions",
      "properties": {
        "tools": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Restrict to specific tools"
        },
        "ip_allowlist": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Allowed IP addresses/ranges"
        }
      }
    },
    "constraints": {
      "type": "object",
      "description": "Token-specific constraints",
      "properties": {
        "max_actions": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum total actions with this token"
        },
        "max_actions_per_minute": {
          "type": "integer",
          "minimum": 1
        },
        "max_actions_per_hour": {
          "type": "integer",
          "minimum": 1
        },
        "max_spend_usd": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum spend allowed with this token"
        },
        "allowed_parameters": {
          "type": "object",
          "description": "Parameter value restrictions"
        }
      }
    },
    "usage": {
      "type": "object",
      "description": "Current usage (tracked by gateway)",
      "properties": {
        "actions_used": {
          "type": "integer",
          "minimum": 0
        },
        "spend_used_usd": {
          "type": "number",
          "minimum": 0
        },
        "last_used_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["active", "expired", "revoked", "exhausted"],
      "default": "active"
    },
    "revoked_at": {
      "type": "string",
      "format": "date-time",
      "description": "Revocation timestamp (if revoked)"
    },
    "revoked_reason": {
      "type": "string",
      "maxLength": 500,
      "description": "Reason for revocation"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "purpose": {
          "type": "string",
          "maxLength": 255
        },
        "request_id": {
          "type": "string"
        }
      }
    }
  }
}
