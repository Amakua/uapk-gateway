# UAPK Gateway Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# SECURITY - CHANGE THESE IN PRODUCTION!
# =============================================================================

# Secret key for JWT signing (generate with: openssl rand -hex 32)
SECRET_KEY=CHANGE-ME-IN-PRODUCTION-USE-SECURE-RANDOM-VALUE

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection URL
DATABASE_URL=postgresql+asyncpg://uapk:uapk@postgres:5432/uapk

# =============================================================================
# APPLICATION
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (enables verbose logging)
DEBUG=true

# Log format: json (production) or console (development)
LOG_FORMAT=console

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# =============================================================================
# SERVER
# =============================================================================

# Host and port
HOST=0.0.0.0
PORT=8000

# Number of workers (set >1 for production)
WORKERS=1

# Enable hot reload (development only)
RELOAD=true

# =============================================================================
# CORS
# =============================================================================

# Allowed origins (JSON array format)
# Leave empty for strict mode, or specify allowed domains
CORS_ORIGINS=["http://localhost:8000","http://localhost:3000"]

# =============================================================================
# JWT
# =============================================================================

# Token expiration in minutes (default: 24 hours)
JWT_EXPIRATION_MINUTES=1440

# JWT algorithm
JWT_ALGORITHM=HS256

# =============================================================================
# BOOTSTRAP (for make bootstrap command)
# =============================================================================

# Initial admin user
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123

# Initial organization
ORG_NAME=Default Organization
ORG_SLUG=default

# =============================================================================
# GATEWAY
# =============================================================================

# Fernet key for secret encryption (generate with: python -c 'from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())')
GATEWAY_FERNET_KEY=

# Default daily action budget per UAPK
GATEWAY_DEFAULT_DAILY_BUDGET=1000

# Hours until approval tasks expire
GATEWAY_APPROVAL_EXPIRY_HOURS=24

# Timeout for connector HTTP calls (seconds)
GATEWAY_CONNECTOR_TIMEOUT_SECONDS=30

# Allowed domains for webhook/HTTP connectors (JSON array)
GATEWAY_ALLOWED_WEBHOOK_DOMAINS=[]

# =============================================================================
# DOCKER COMPOSE PORTS
# =============================================================================

# Backend API port
BACKEND_PORT=8000

# PostgreSQL port
POSTGRES_PORT=5432
